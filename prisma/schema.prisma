generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	fullName String @db.VarChar(255)
	username String @db.VarChar(255) @unique
	photo String @db.VarChar(255) @default("nophoto.png")
	password String @db.VarChar(255)
	otp String? @db.Char(6)
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt

	recordText Text[] @relation("Text_recordUser")
	recordVoice Voice[] @relation("Voice_recordUser")

	@@map("users")
}

model Text {
	id Int @id @default(autoincrement())
	text String @db.LongText 
	image String @db.VarChar(255)
	renderFrom String

	userId Int
	recordText User @relation("Text_recordUser", fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade) 

	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt

	@@map("texts")
}

model Voice {
	id Int @id @default(autoincrement())
	text String @db.LongText
	image String @db.VarChar(255)
	voice String @db.VarChar(255)
	renderFrom String

	userId Int
	recordVoice User @relation("Voice_recordUser", fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)

	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt

	@@map("voices")
}